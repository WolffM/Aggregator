{
  "name": "@wolffm/oss-aggregator",
  "version": "2.0.2",
  "description": "OSS Issue Aggregator - Browse beginner-friendly issues across open source projects",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WolffM/hadoku-aggregator.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css",
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:ui && pnpm build:api",
    "build:ui": "vite build && tsc -p tsconfig.build.json",
    "build:api": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "hono": "^4.11.4",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "@wolffm/task-ui-components": ">=1.0.0",
    "@wolffm/themes": ">=1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@wolffm/task-ui-components": "^1.3.4",
    "@wolffm/themes": "^2.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
